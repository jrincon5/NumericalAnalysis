<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edu.eafit.numericalanalysis.OneVariable"
    tools:showIn="@layout/activity_one_variable">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bisection"
    android:id="@+id/button_Bisection"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="@+id/button_FalseRule"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:height="80dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="False  Rule  "
        android:id="@+id/button_FalseRule"
        android:layout_below="@+id/button_Bisection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/button_Bisection"
        android:layout_alignRight="@+id/button_Bisection"
        android:layout_alignEnd="@+id/button_Bisection"
        android:height="80dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed Point"
        android:id="@+id/button_FixedPoint"
        android:height="80dp"
        android:layout_below="@+id/button_FalseRule"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newton Raphson"
        android:id="@+id/button_NewtonRaphosn"
        android:height="80dp"
        android:layout_below="@+id/button_FixedPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_FixedPoint"
        android:layout_alignEnd="@+id/button_FixedPoint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secant"
        android:id="@+id/button_Secant"
        android:height="80dp"
        android:layout_below="@+id/button_NewtonModified"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_NewtonModified"
        android:layout_alignEnd="@+id/button_NewtonModified" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newton Raphson Modified"
        android:id="@+id/button_NewtonModified"
        android:height="80dp"
        android:layout_below="@+id/button_NewtonRaphosn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_NewtonRaphosn"
        android:layout_alignEnd="@+id/button_NewtonRaphosn" />

</RelativeLayout>
